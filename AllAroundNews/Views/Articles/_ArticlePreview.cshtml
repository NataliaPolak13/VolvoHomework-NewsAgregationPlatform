@model ArticleModel

@{
    ViewData["Title"] = "Articles";
}

<div class="card">
   <div class="card-body">
        <h3 class="card-title">@Model.Title</h3>
        <p class="card-text">
            @Html.Raw(Model.Description)
        </p>
        <a href="@Model.SourceLink" class="btn btn-primary">Enter @Model.SourceName</a>
    </div>
</div>